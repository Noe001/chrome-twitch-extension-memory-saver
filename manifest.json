{
  "manifest_version": 3,
  "name": "YouTube & Twitch Live Chat Memory Saver",
  "version": "1.1.0",
  "description": "YouTube LiveとTwitch Liveのチャットによるメモリ増加を抑制する拡張機能",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["*://www.youtube.com/*", "*://youtube.com/*", "*://www.twitch.tv/*", "*://twitch.tv/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*", "*://www.twitch.tv/*", "*://twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  }
}
